<Page
    x:Class="SystGest.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:SystGest.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    DataContext="{Binding LoginViewModel, Source={StaticResource Locator}}"
    mc:Ignorable="d">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <Grid>
                <Border x:Name="background">
                    <Image Source="ms-appx:///Assets/Images/LoginBackground.jpg" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.9" />
                </Border>
                <!--<Image Margin="24" Source="ms-appx:///Assets/Images/LoginLogo.png" HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="None" />-->
            </Grid>

            <TextBox Grid.RowSpan="2" GotFocus="OnBackgroundFocus" Opacity="0" />

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <StackPanel x:Name="foreground" Grid.Row="1" VerticalAlignment="Center">
                    <Grid GotFocus="OnForegroundFocus">
                        <views:SignInWithPasswordPage x:Name="passwordView" HorizontalAlignment="Center"
                                                      Visibility="{Binding IsLoginWithPassword, Converter={StaticResource BoolToVisibilityConverter}}"
                                                      IsEnabled="{Binding IsBusy, Converter={StaticResource BoolNegationConverter}}" />
                        <!--<views:SignInWithHelloView x:Name="helloView" HorizontalAlignment="Center" Visibility="{Binding IsLoginWithWindowsHello, Converter={StaticResource BoolToVisibilityConverter}}" IsEnabled="{Binding IsBusy, Converter={StaticResource BoolNegationConverter}}" />-->
                    </Grid>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" IsHitTestVisible="False" />

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>

                <HyperlinkButton Content="Sign in with another user" Foreground="#222" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="{Binding IsLoginWithWindowsHello, Converter={StaticResource BoolToVisibilityConverter}}" Click="OnShowLoginWithPassword" Command="{Binding ShowLoginWithPasswordCommand}" />
                <StackPanel Grid.Row="1" VerticalAlignment="Bottom">
                    <TextBlock Text="SYST GEST - UMECI" HorizontalAlignment="Center" Foreground="DodgerBlue" FontWeight="SemiBold" FontSize="24" />
                    <TextBlock Text="{Binding VersionPackage}" HorizontalAlignment="Center" Foreground="DodgerBlue" />
                    <Rectangle Margin="2" />
                    <TextBlock HorizontalAlignment="Center" FontSize="14"><Hyperlink IsTabStop="False" NavigateUri="https://github.com/dotnet-architecture/" Foreground="#FFCC5E29">dotnet-architecture/eShopOnUWP</Hyperlink></TextBlock>
                    <Rectangle Margin="12" />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
